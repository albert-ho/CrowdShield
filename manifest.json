{
  "manifest_version": 2,

  "name": "Twitter Bert",
  "description": "Do Bert stuff",
  "version": "0.0.1",

  "permissions": [
    "http://twitter.com/",
    "https://twitter.com/",
    "storage"
  ],

  "page_action": {
    "default_title": "Do Bert stuff on Twitter",
    "default_icon":  "sun.png"
  },

  "background": {
    "scripts": "background.js"
  },

  "web_accessible_resources": ["jquery-2.0.3.min.map"],

  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "js": ["jquery-2.0.3.min.js", "main.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
